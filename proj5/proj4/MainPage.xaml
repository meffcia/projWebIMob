<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proj4.MainPage"
             Title="Lista książek">

    <ContentPage.Content>
        <ScrollView VerticalScrollBarVisibility="Always">
            <VerticalStackLayout Padding="20">
                <Button Text="Add New Book" Command="{Binding ShowBooksCommand}" HorizontalOptions="Center" />
                <Button Text="Add New Author" Command="{Binding ShowAuthorsCommand}" HorizontalOptions="Center" />
                <Button Text="Add New Writer" Command="{Binding ShowWritersCommand}" HorizontalOptions="Center" />
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
