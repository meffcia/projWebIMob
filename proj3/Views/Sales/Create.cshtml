@model proj3.Models.SaleModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Dodaj Sprzedaż";
}

<div class="content mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h2>Dodaj Sprzedaż</h2>

                    <form asp-action="Create" method="post">
                        <div class="form-group">
                            <label asp-for="BookTitle">Tytuł książki</label>
                            <select asp-for="BookTitle" class="form-control" asp-items="@(new SelectList(ViewBag.Books, "Title", "Title"))">
                                <option value="">Wybierz książkę</option>
                            </select>
                            <span asp-validation-for="BookTitle" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Month">Miesiąc</label>
                            <select asp-for="Month" class="form-control" asp-items="ViewBag.Months">
                                <option value="">Wybierz miesiąc</option>
                            </select>
                            <span asp-validation-for="Month" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Year">Rok</label>
                            <select asp-for="Year" class="form-control" asp-items="ViewBag.Years">
                                <option value="">Wybierz rok</option>
                            </select>
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Quantity">Ilość</label>
                            <input asp-for="Quantity" type="number" class="form-control" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Zatwierdź</button>
                        <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
