@model SaleModel

<div class="content mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h2>Edytuj Sprzedaż</h2>

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <label>Tytuł książki</label>
                            <select asp-for="BookTitle" class="form-control" asp-items="@(new SelectList(ViewBag.Books, "Title", "Title", Model.BookTitle))">
                                <option value="">Wybierz książkę</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Miesiąc</label>
                            <select asp-for="Month" class="form-control" asp-items="ViewBag.Months">
                                <option value="">Wybierz miesiąc</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Rok</label>
                            <select asp-for="Year" class="form-control" asp-items="ViewBag.Years">
                                <option value="">Wybierz rok</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Ilość</label>
                            <input asp-for="Quantity" type="number" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary">Zatwierdź</button>
                        <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
