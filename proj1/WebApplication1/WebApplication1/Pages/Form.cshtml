@page
@model FormModel

<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ankieta</title>
    <style>
        .error {
            color: red;
            font-size: 0.9em;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .button {
            background-color: #007BFF;
            color: white;
            border: none;
            padding: 10px 15px;
            font-size: 16px;
            border-radius: 4px;
            cursor: pointer;
        }

            .button:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <h2>Wprowadź dane:</h2>

    <form asp-action="Submit" method="post">
        <div class="form-group">
            <label for="Name">Imię</label>
            <input type="text" id="Name" name="Name" class="form-control" />
            <span class="error" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label for="Email">Adres email</label>
            <input type="email" id="Email" name="Email" class="form-control" />
            <span class="error" asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label for="Message">Wiadomość</label>
            <textarea id="Message" name="Message" class="form-control"></textarea>
            <span class="error" asp-validation-for="Message"></span>
        </div>
        <button type="submit" class="button">Wyślij</button>
    </form>

    @if (Model != null)
    {
        <div>
            <h3>Dane wprowadzone przez użytkownika:</h3>
            <p><strong>Imię:</strong> @Model.Name</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Wiadomość:</strong> @Model.Message</p>
        </div>
    }

  
</body>
</html>
