<Window x:Class="OnlineShop.MauiClient.Views.ProductView.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Product" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Product Name:" />
            <TextBox Text="{Binding Product.Name}" Margin="0,5,0,10"/>

            <TextBlock Text="Description:" />
            <TextBox Text="{Binding Product.Description}" Margin="0,5,0,10"/>
            
            <TextBlock Text="Price:" />
            <TextBox Text="{Binding Product.Price}" Margin="0,5,0,10"/>
            
            <TextBlock Text="Stock:" />
            <TextBox Text="{Binding Product.Stock}" Margin="0,5,0,10"/>
            
            <TextBlock Text="Castegory:" />
            <TextBox Text="{Binding Product.CategoryId}" Margin="0,5,0,10"/>

            <Button Content="Save" Command="{Binding SaveCommand}" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
