<ContentPage x:Class="OnlineShop.MauiClient.Views.OrderView.OrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left">
            <Label Content="Moje konto" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="{Binding UserName, StringFormat='Witaj, {0}'}" Foreground="Black"/>
            <Button Content="Wyloguj" Command="{Binding LogOutCommand}" MaxWidth="200" HorizontalAlignment="Left"/>
                <DataGrid ItemsSource="{Binding Orders}" AutoGenerateColumns="False" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Numer zamówienia" Binding="{Binding Id}" />
                    <DataGridTextColumn Header="Produkty" Binding="{Binding ProductString}"/>
                    <DataGridTextColumn Header="Cena całkowita" Binding="{Binding Price}" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</ContentPage>
