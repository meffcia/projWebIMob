@{
    Layout = null; // Jeśli chcesz, aby ten layout był głównym, usuń "null" lub przypisz odpowiedni layout
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Personalizowane style */
        .hero-section {
            background: linear-gradient(to right, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://source.unsplash.com/1600x900/?electronics,shopping,store') no-repeat center center;
            background-size: cover;
            color: white;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .footer {
            background-color: #f8f9fa;
            padding: 20px;
            text-align: center;
            margin-top: 50px;
        }

        /* Dodane style dla sticky footer */
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        .container {
            flex: 1;
        }

        .navbar-nav .nav-item {
            margin-right: 20px;
        }

        /* Wyrównanie elementów w navbarze */
        .navbar-nav {
            display: flex;
            align-items: center;
        }

        .cart-badge {
            display: none; /* Ukryj badge domyślnie */
            position: absolute;
            top: 0;
            right: 0;
            transform: translate(30%, -30%);
            font-size: 0.6rem; /* Zmniejszona czcionka */
            background-color: dodgerblue;
            color: white;
            border-radius: 70%;
            padding: 0.1rem 0.3rem; /* Zmniejszone padding */
        }

            .cart-badge.show {
                display: inline-block; /* Pokaż badge tylko, gdy ma klasę 'show' */
            }

        /* Styl stopki */
        .footer-links a {
            margin: 0 15px;
            color: #007bff;
            text-decoration: none;
        }

            .footer-links a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <!-- Navbar - Pasek na górze strony -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">OnlineShop</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/product/index">Produkty</a>
                    </li>
                    <!-- Koszyk - Zmieniono nazwę na prosty tekst bez ikony -->
                    <li class="nav-item position-relative">
                        <a class="nav-link" href="/cart/index">
                            Koszyk
                            <!-- Tylko pokazuj badge, jeśli liczba jest większa niż 0 -->
                            <span class="cart-badge @(ViewData["CartItemCount"] != null && (int)ViewData["CartItemCount"] > 0 ? "show" : "")">
                                @ViewData["CartItemCount"]
                            </span>
                        </a>
                    </li>
                    <!-- Profil użytkownika -->
                    <li class="nav-item">
                        <a class="nav-link" href="/userprofile/index">Profil</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Główna zawartość strony -->
    <div class="container">
        @RenderBody() <!-- Tutaj będą wstawiane widoki zależne od strony -->
    </div>

    <!-- Footer - Stopka -->
    <footer class="footer">
        <p>&copy; 2025 OnlineShop - Wszystkie prawa zastrzeżone.</p>
        <div class="footer-links">
            <a href="#">Polityka prywatności</a> |
            <a href="#">Warunki użytkowania</a> |
            <a href="#">O nas</a> |
            <a href="#">Kontakt</a>
        </div>
    </footer>

    <!-- Bootstrap JS i FontAwesome dla ikon -->
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
