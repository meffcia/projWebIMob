@model OnlineShop.Shared.Models.OrderSummary

@{
    ViewData["Title"] = "Podsumowanie zamówienia";
    var totalAmount = ViewBag.TotalAmount;
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .btn-custom {
            background-color: #0066B3;
            color: white;
        }

            .btn-custom:hover {
                background-color: #00448c;
                color: white;
            }

        .message-box {
            text-align: center;
            margin-top: 30px;
        }

        .order-summary {
            margin-top: 40px;
        }

            .order-summary th, .order-summary td {
                vertical-align: middle;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2>Podsumowanie zamówienia</h2>

        <div class="message-box">
            <h3>Twoje zamówienie jest teraz w realizacji!</h3>
            <p>Całkowita kwota zamówienia: <strong>@totalAmount.ToString("0.00") PLN</strong></p>
            <p>Dziękujemy za zakupy!</p>
        </div>

        <div class="order-summary">
            <h3>Szczegóły zamówienia:</h3>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Produkt</th>
                        <th scope="col">Ilość</th>
                        <th scope="col">Cena jednostkowa (PLN)</th>
                        <th scope="col">Razem (PLN)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td>@item.Product.Name</td>
                            <td>@item.Quantity</td>
                            <td>@item.Product.Price.ToString("0.00") PLN</td>
                            <td>@(item.Quantity * item.Product.Price) PLN</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-end"><strong>Całkowita kwota:</strong></td>
                        <td><strong>@totalAmount.ToString("0.00") PLN</strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="text-center">
            <a href="/product/index" class="btn btn-custom btn-lg">Powrót do sklepu</a>
        </div>
    </div>
</body>
</html>
