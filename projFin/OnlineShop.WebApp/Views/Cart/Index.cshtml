@model IEnumerable<OnlineShop.Shared.Models.CartItem>

@{
    ViewData["Title"] = "Koszyk";
    var totalAmount = Model.Sum(item => item.Quantity * item.Product.Price);
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .btn-custom {
            background-color: #0066B3;
            color: white;
        }

            .btn-custom:hover {
                background-color: #00448c;
                color: white;
            }

        .btn-secondary-custom {
            background-color: #6c757d;
            color: white;
        }

        .btn-danger-custom {
            background-color: #dc3545;
            color: white;
        }

        .cart-table th, .cart-table td {
            vertical-align: middle;
        }

        .cart-actions button {
            margin-right: 10px;
        }

        .cart-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .quantity-input {
            width: 70px;
        }

        .btn-group-custom {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .clear-cart-btn {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="d-flex justify-content-end clear-cart-btn">
            <!-- Zaktualizowany formularz z warunkiem disabled -->
            <form asp-action="ClearCart" method="post">
                <button type="submit" class="btn btn-danger-custom btn-sm" @(Model.Count() == 0 ? "disabled" : "")>Wyczyść koszyk</button>
            </form>
        </div>

        <h2>Twoje produkty w koszyku</h2>
        <table class="table cart-table">
            <thead>
                <tr>
                    <th scope="col">Produkt</th>
                    <th scope="col">Ilość</th>
                    <th scope="col">Cena</th>
                    <th scope="col">Razem</th>
                    <th scope="col">Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.Product.Price PLN</td>
                        <td>@(item.Quantity * item.Product.Price) PLN</td>
                        <td>
                            <div class="cart-actions">
                                <form asp-action="RemoveFromCart" method="post" class="d-inline">
                                    <input type="hidden" name="productId" value="@item.Product.Id" />
                                    <div class="input-group">
                                        <input type="number" name="quantity" class="form-control quantity-input" min="1" max="@item.Quantity" value="1" />
                                        <button type="submit" class="btn btn-custom btn-sm" @(totalAmount == 0 ? "disabled" : "")>Usuń</button>
                                    </div>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end"><strong>Całkowita kwota:</strong></td>
                    <td colspan="2"><strong>@totalAmount PLN</strong></td>
                </tr>
            </tfoot>
        </table>

        <div class="btn-group-custom">
            <a href="/product/index" class="btn btn-secondary-custom btn-lg w-48">Wróć do zakupów</a>
            @if (totalAmount > 0)
            {
                <a href="/checkout/index" class="btn btn-custom btn-lg w-48">Przejdź do kasy</a>
            }
            else
            {
                <button class="btn btn-custom btn-lg w-48" disabled>Przejdź do kasy</button>
            }
        </div>

        @if (totalAmount == 0)
        {
            <div class="alert alert-warning mt-3">
                Koszyk jest pusty. Aby przejść do płatności, dodaj produkty do koszyka.
            </div>
        }
    </div>
</body>
</html>
