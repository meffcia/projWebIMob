@model IEnumerable<OnlineShop.Shared.Models.CartItem>

    @{
    ViewData["Title"] = "Koszyk";
    }

    <!DOCTYPE html>
    <html lang="pl">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewData["Title"]</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>
        <div class="container mt-5">
            <h2>Twoje produkty w koszyku</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Produkt</th>
                        <th scope="col">Iloœæ</th>
                        <th scope="col">Cena</th>
                        <th scope="col">Razem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.Product.Price PLN</td>
                        <td>@(item.Quantity * item.Product.Price) PLN</td>
                    </tr>
                }
                </tbody>
            </table>
            <a href="/Checkout" class="btn btn-primary">PrzejdŸ do kasy</a>
        </div>
    </body>
</html>
