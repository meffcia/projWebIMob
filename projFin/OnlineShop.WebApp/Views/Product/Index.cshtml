@model IEnumerable<OnlineShop.Shared.Models.Product>

    @{
    ViewData["Title"] = "Produkty";
    }

    <!DOCTYPE html>
    <html lang="pl">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewData["Title"]</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>
        <div class="container mt-5">
            <h2 class="text-center mb-4">Produkty w sklepie</h2>
            <div class="row">
                @foreach (var product in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="https://via.placeholder.com/150" class="card-img-top" alt="@product.Name">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text"><strong>@product.Price PLN</strong></p>
                            <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="btn btn-primary">Szczegóły</a>
                        </div>
                    </div>
                </div>
            }
            </div>
        </div>
    </body>
</html>
