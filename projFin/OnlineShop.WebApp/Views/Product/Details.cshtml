@model OnlineShop.Shared.Models.Product

@{
    ViewData["Title"] = "Szczegó³y produktu";
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>@Model.Name</h2>
        <div class="row">
            <div class="col-md-6">
                <img src="https://via.placeholder.com/300" class="img-fluid" alt="@Model.Name">
            </div>
            <div class="col-md-6">
                <p><strong>Cena:</strong> @Model.Price PLN</p>
                <p><strong>Opis:</strong> @Model.Description</p>
                <p><strong>Stan magazynowy:</strong> @Model.Stock</p>
                <a href="#" class="btn btn-primary">Dodaj do koszyka</a>
            </div>
        </div>
    </div>
</body>
</html>
