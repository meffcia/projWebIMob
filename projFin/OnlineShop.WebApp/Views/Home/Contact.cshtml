@{
    ViewData["Title"] = "Kontakt";
}

<h1>@ViewData["Title"]</h1>
<p>Masz pytania? Skontaktuj się z nami!</p>

<h3>Adres</h3>
<p>Podajemy nasz adres...</p>

<h3>Email</h3>
<p>Skontaktuj się z nami przez email: <a href="mailto:kontakt@onlineshop.com">kontakt@onlineshop.com</a></p>

<h3>Telefon</h3>
<p>Skontaktuj się z nami telefonicznie pod numerem: 123-456-789</p>

<!-- Możesz dodać formularz kontaktowy -->
<h3>Formularz kontaktowy</h3>
<form method="post">
    <div class="form-group">
        <label for="Name">Twoje imię</label>
        <input type="text" class="form-control" id="Name" name="Name" required />
    </div>
    <div class="form-group">
        <label for="Email">Twój email</label>
        <input type="email" class="form-control" id="Email" name="Email" required />
    </div>
    <div class="form-group">
        <label for="Message">Wiadomość</label>
        <textarea class="form-control" id="Message" name="Message" rows="4" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Wyślij</button>
</form>
