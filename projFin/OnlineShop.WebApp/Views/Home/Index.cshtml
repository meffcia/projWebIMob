@{
    ViewData["Title"] = "Strona Główna";
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrapp CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Personalizowane style */
        .hero-section {
            background: linear-gradient(to right, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://source.unsplash.com/1600x900/?electronics,shopping,store') no-repeat center center;
            background-size: cover;
            color: white;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .hero-section h1 {
                font-size: 4rem;
                text-align: center;
            }

        .feature-card {
            border: none;
            background: #f8f9fa;
            transition: transform 0.3s;
        }

            .feature-card:hover {
                transform: translateY(-10px);
            }

        .feature-icon {
            font-size: 3rem;
            color: #007bff;
        }

        .footer {
            background-color: #f8f9fa;
            padding: 20px;
            text-align: center;
        }
    </style>
</head>
<body>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="text-center">
            <h1>Witamy w naszym sklepie internetowym!</h1>
            <p class="lead">Oferujemy szeroką gamę produktów w najlepszych cenach!</p>
            <!-- Przekierowanie do sekcji produktów -->
            <a href="/product/index" class="btn btn-primary btn-lg mt-3">Zobacz naszą ofertę</a>
        </div>
    </section>

    <!-- Feature Section -->
    <section class="container my-5">
        <h2 class="text-center mb-4">Dlaczego warto kupować u nas?</h2>
        <div class="row text-center">
            <!-- Feature 1 -->
            <div class="col-md-4 mb-4">
                <div class="card feature-card shadow-sm">
                    <div class="card-body">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-truck"></i>
                        </div>
                        <h4 class="card-title">Szybka wysyłka</h4>
                        <p class="card-text">Zamówienia realizujemy błyskawicznie, abyś mógł cieszyć się swoimi produktami jak najszybciej!</p>
                    </div>
                </div>
            </div>
            <!-- Feature 2 -->
            <div class="col-md-4 mb-4">
                <div class="card feature-card shadow-sm">
                    <div class="card-body">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <h4 class="card-title">Bezpieczeństwo</h4>
                        <p class="card-text">Zakupy u nas są w pełni bezpieczne dzięki solidnym zabezpieczeniom płatności.</p>
                    </div>
                </div>
            </div>
            <!-- Feature 3 -->
            <div class="col-md-4 mb-4">
                <div class="card feature-card shadow-sm">
                    <div class="card-body">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-headset"></i>
                        </div>
                        <h4 class="card-title">Obsługa klienta</h4>
                        <p class="card-text">Nasza pomoc techniczna i obsługa klienta są zawsze gotowe, by Ci pomóc!</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Bootstrap JS and FontAwesome for icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
