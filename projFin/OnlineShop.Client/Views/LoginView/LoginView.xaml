<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:OnlineShop.Client.ViewModels"
             x:Class="OnlineShop.Client.Views.LoginView.LoginView"
             Title="Logowanie">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Logowanie" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />

            <Entry Placeholder="Email" 
                   Text="{Binding Email}" 
                   Keyboard="Email" />

            <Entry Placeholder="Hasło" 
                   Text="{Binding Password}" 
                   IsPassword="True" />

            <Button Text="Zaloguj" 
                    Command="{Binding LogInCommand}" />

            <Label Text="{Binding ErrorMessage}" 
                   TextColor="Red" 
                   HorizontalTextAlignment="Center" />

            <HorizontalStackLayout HorizontalOptions="Center">
                <Label Text="Nie masz konta?" />
                <!-- <Label Text="Zarejestruj się" 
                       TextColor="Blue" 
                       FontAttributes="Bold" 
                       GestureRecognizers="{StaticResource TapGesture}"
                       Margin="5,0,0,0" /> -->
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
