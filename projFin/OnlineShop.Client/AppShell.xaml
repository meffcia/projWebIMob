<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OnlineShop.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OnlineShop.Client"
    xmlns:viewmodel="clr-namespace:OnlineShop.Client.ViewModels"
    Shell.FlyoutBehavior="Flyout"
    Title="OnlineShop.Client">

    <ShellContent
        Title="MainPage"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:Views.LoginView.LoginView}"
        Route="LoginView" />

    <ShellContent
        Title="Rejestracja"
        ContentTemplate="{DataTemplate local:Views.LoginView.RegisterView}"
        Route="RegisterView" />

    <ShellContent
        Title="tmpNameHome"
        ContentTemplate="{DataTemplate local:Views.HomeView}"
        Route="tmpNameHome" />

    <ShellContent
        Title="Produkty"
        ContentTemplate="{DataTemplate local:Views.ProductView}"
        Route="Products" />

</Shell>
